{
 "openapi": "3.0.0",
 "info": {
  "title": "Introduction to SOLID API",
  "description": "This is an API to learn about SOLID software development practices",
  "version": "1.0.0",
  "contact": {
   "email": "felipesantos.2017@alunos.utfpr.edu.br"
  }
 },
 "paths": {
  "/users": {
   "post": {
    "tags": ["Users"],
    "summary": "Create a user",
    "description": "Create a new user in API by using name and email",
    "requestBody": {
     "content": {
      "application/json": {
       "schema": {
        "type": "object",
        "properties": {
         "name": {
          "type": "string"
         },
         "email": {
          "typr": "string"
         }
        },
        "example": {
         "name": "John Doe",
         "email": "johndoe@user.com"
        }
       }
      }
     }
    },
    "responses": {
     "201": {
      "description": "User created.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "admin": {
                "type": "boolean"
              },
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "created_at": {
                "type": "string"
              },
              "updated_at": {
                "type": "string"
              }
            },
            "example": {
              "admin": false,
              "id": "c5c739c0-4576-47a4-82f5-8b314d2eba21",
              "name": "user",
              "email": "user@user.com",
              "created_at": "2022-04-20T19:42:40.759Z",
              "updated_at": "2022-04-20T19:42:40.759Z"
            }
          }
        }
      }
    },
     "400": {
      "description": "User email already used.",
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "error": "string"
            },
            "example": {
              "error": "User already exists!"
            }
          }
        }
      }
    }
    }
   },
   "get": {
    "tags": ["Users"],
    "summary": "Get a user",
    "description": "Get a user by user_id",
    "requestBody": {
     "content": {
      "application/json": {
       "schema": {
        "type": "object",
        "properties": {
         "name": {
          "type": "string"
         },
         "email": {
          "typr": "string"
         }
        },
        "example": {
         "name": "John Doe",
         "email": "johndoe@user.com"
        }
       }
      }
     }
    },
    "response": {
     "200": {
      "description": "User found"
     },
     "404": {
      "description": "User not found"
     }
    }
   },
   "patch": {

   }
  },
  "/users/:user_id/admin": {
   "tags": ["Users"]
  }
 }
}