 "paths": {
  "/users": {
   "post": {
    "tags": ["Users"],
    "summary": "Create a user",
    "description": "Create a new user in API by using name and email",
    "requestBody": {
     "content": {
      "application/json": {
       "schema": {
        "type": "object",
        "properties": {
         "name": {
          "type": "string"
         },
         "email": {
          "typr": "string"
         }
        },
        "example": {
         "name": "John Doe",
         "email": "johndoe@user.com"
        }
       }
      }
     }
    },
    "response": {
     "201": {
      "description": "User created"
     },
     "400": {
      "description": "Email already used"
     }
    }
   },
   "get": {
    "tags": ["Users"],
    "summary": "Get a user",
    "description": "Get a user by user_id",
    "requestBody": {
     "content": {
      "application/json": {
       "schema": {
        "type": "object",
        "properties": {
         "name": {
          "type": "string"
         },
         "email": {
          "typr": "string"
         }
        },
        "example": {
         "name": "John Doe",
         "email": "johndoe@user.com"
        }
       }
      }
     }
    },
    "response": {
     "200": {
      "description": "User found"
     },
     "404": {
      "description": "User not found"
     }
    }
   },
   "patch": {

   }
  },
  "/users/:user_id/admin": {
   "tags": ["Users"]
  }
 }
}